# Environment configuration example for Vriddhi FastAPI Backend
# Copy this file to .env and update the values

# Application settings
ENVIRONMENT=development
DEBUG=true
APP_NAME=Vriddhi Investment API
API_V1_STR=/api/v1

# Server settings
HOST=0.0.0.0
PORT=8000

# Database settings (for local development)
POSTGRES_SERVER=localhost
POSTGRES_USER=vriddhi_user
POSTGRES_PASSWORD=vriddhi_password
POSTGRES_DB=vriddhi_db
POSTGRES_PORT=5432
DATABASE_URL=postgresql+asyncpg://vriddhi_user:vriddhi_password@localhost:5432/vriddhi_db

# Redis settings (optional)
REDIS_URL=redis://localhost:6379

# Security
SECRET_KEY=your-super-secret-key-change-in-production-please
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8501

# Investment algorithm settings
DEFAULT_EXPECTED_CAGR=0.15
MIN_MONTHLY_INVESTMENT=50000
MAX_STOCKS_IN_PORTFOLIO=20
MIN_STOCKS_IN_PORTFOLIO=8
PEG_RATIO_THRESHOLD=1.0

# Data sources
STOCK_DATA_CSV_PATH=data/grand_table_expanded.csv

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/vriddhi_api.log

# Rate limiting
RATE_LIMIT_PER_MINUTE=60

# Monitoring and metrics
ENABLE_METRICS=true
METRICS_PORT=8001

# Optional: Error tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Railway deployment (these will be auto-injected by Railway)
# DATABASE_URL=${Postgres.DATABASE_URL}
# PORT=${PORT}